@model IEnumerable<CMS.Domain.Admin.Categories.Category>

<ul class="list-group">
    <li class="list-group-item active">دسته‌بندی‌ها</li>
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-controller="Product" asp-action="Index" asp-route-slug="">همه محصولات</a>
    </li>
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <a class="nav-link text-dark" asp-controller="Product" asp-action="Index" asp-route-slug="@item.Slug">
                @item.Name
            </a>
        </li>
    }
</ul>
